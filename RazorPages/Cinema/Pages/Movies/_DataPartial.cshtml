@model IEnumerable<Models.Movie>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a class="button-edit" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="button-details" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a class="button-delete" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
