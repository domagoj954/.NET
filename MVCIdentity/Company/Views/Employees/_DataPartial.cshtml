@model IEnumerable<Company.Models.Employee>
<p>
    <a class="button-create" asp-action="Create">Create New</a>
</p>
<table class="table">
  <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profession)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOnProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ceo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOnProject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ceo.Id)
            </td>
            <td>
                <a class="button-update" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="button-details" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="button-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
    </table>